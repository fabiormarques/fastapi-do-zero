{
    "name": "Python FastAPI",
    "dockerComposeFile": "docker-compose.yml",
    "service": "app",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2":{
            "configureZshAsDefaultShell": true,
            "username": "vscode",
            "userUid": "1000",
            "userGid": "1000"
        }
    },
    "remoteUser": "vscode",
    "workspaceFolder": "/home/vscode/fastapi-do-zero",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python"
            ]
        }
    },
    "postCreateCommand": "pip install -r requirements.txt"
}